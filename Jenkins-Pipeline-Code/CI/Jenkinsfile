pipeline {
    agent any

    environment {
        AWS_REGION        = "ap-south-1"
        AWS_ACCOUNT_ID    = "688372068524"
        ECR_BACKEND_REPO  = "capstone/backend-img"
        ECR_FRONTEND_REPO = "capstone/frontend-img"
        ECR_BACKEND_URI   = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_BACKEND_REPO}"
        ECR_FRONTEND_URI  = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_FRONTEND_REPO}"
        SONARQUBE_SERVER  = "SonarQubeServer"
        SONARQUBE_SCANNER = "SonarQubeScanner"
        GIT_CREDENTIAL_ID = "gihtub-conn"   // Add your Jenkins GitHub credentials ID
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/sachinashokyadav/ThreeTierApplication.git'
            }
        }

        stage('Code Quality Analysis (SonarQube)') {
            steps {
                script {
                    echo "üîé Running SonarQube Code Analysis..."
                    def scannerHome = tool name: "${SONARQUBE_SCANNER}", type: 'hudson.plugins.sonar.SonarRunnerInstallation'

                    withSonarQubeEnv("${SONARQUBE_SERVER}") {
                        sh """
                            cd ${WORKSPACE}/Application-Code/backend
                            ${scannerHome}/bin/sonar-scanner \\
                                -Dsonar.projectKey=backend \\
                                -Dsonar.sources=. \\
                                -Dsonar.host.url=${SONAR_HOST_URL} \\
                                -Dsonar.login=${SONAR_AUTH_TOKEN} \\
                                -Dsonar.projectName="Backend Analysis"

                            cd ${WORKSPACE}/Application-Code/frontend
                            ${scannerHome}/bin/sonar-scanner \\
                                -Dsonar.projectKey=frontend \\
                                -Dsonar.sources=. \\
                                -Dsonar.host.url=${SONAR_HOST_URL} \\
                                -Dsonar.login=${SONAR_AUTH_TOKEN} \\
                                -Dsonar.projectName="Frontend Analysis"
                        """
                    }
                }
            }
        }

        stage('Dependency Check') {
            steps {
                script {
                    echo "üîç Running OWASP Dependency Check..."
                    sh '''
                        apt-get update -y && apt-get install -y wget unzip default-jre-headless
                        mkdir -p /opt/dependency-check
                        cd /opt/dependency-check

                        if [ ! -f dependency-check/bin/dependency-check.sh ]; then
                            echo "Downloading OWASP Dependency Check CLI..."
                            wget -q https://github.com/jeremylong/DependencyCheck/releases/download/v8.4.0/dependency-check-8.4.0-release.zip
                            unzip -o dependency-check-8.4.0-release.zip
                        fi

                        mkdir -p $WORKSPACE/reports

                        echo "Scanning backend dependencies..."
                        cd $WORKSPACE/Application-Code/backend
                        /opt/dependency-check/dependency-check/bin/dependency-check.sh \\
                            --scan . --format HTML --out $WORKSPACE/reports/backend-dependency-report.html || true

                        echo "Scanning frontend dependencies..."
                        cd $WORKSPACE/Application-Code/frontend
                        /opt/dependency-check/dependency-check/bin/dependency-check.sh \\
                            --scan . --format HTML --out $WORKSPACE/reports/frontend-dependency-report.html || true
                    '''
                }
            }
        }

        stage('File Scan') {
            steps {
                script {
                    echo "üßæ Scanning for sensitive files..."
                    sh '''
                        echo "Checking for .env files..."
                        find Application-Code -type f -name ".env" || echo "No .env files found."

                        echo "Checking for AWS access keys..."
                        grep -rnE "AKIA[0-9A-Z]{16}" Application-Code || echo "No AWS keys found."
                    '''
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def GIT_COMMIT   = sh(returnStdout: true, script: "git rev-parse --short HEAD").trim()
                    env.BACKEND_TAG  = "backend-${GIT_COMMIT}"
                    env.FRONTEND_TAG = "frontend-${GIT_COMMIT}"

                    echo "üê≥ Building Docker images:"
                    echo "Backend -> ${ECR_BACKEND_URI}:${BACKEND_TAG}"
                    echo "Frontend -> ${ECR_FRONTEND_URI}:${FRONTEND_TAG}"

                    sh """
                        cd ${WORKSPACE}/Application-Code/backend
                        docker build -t ${ECR_BACKEND_URI}:${BACKEND_TAG} .

                        cd ${WORKSPACE}/Application-Code/frontend
                        docker build -t ${ECR_FRONTEND_URI}:${FRONTEND_TAG} .
                    """
                }
            }
        }

        stage('Image Vulnerability Scan (Trivy)') {
            steps {
                script {
                    echo "üõ°Ô∏è Scanning Docker images with Trivy..."
                    sh """
                        apt-get update -y && apt-get install -y wget apt-transport-https gnupg lsb-release

                        if ! command -v trivy > /dev/null; then
                            wget -qO - https://aquasecurity.github.io/trivy-repo/deb/public.key | gpg --dearmor -o /usr/share/keyrings/trivy.gpg
                            echo "deb [signed-by=/usr/share/keyrings/trivy.gpg] https://aquasecurity.github.io/trivy-repo/deb \$(lsb_release -sc) main" | tee /etc/apt/sources.list.d/trivy.list
                            apt-get update -y && apt-get install -y trivy
                        fi

                        mkdir -p ${WORKSPACE}/reports

                        echo "Scanning backend image..."
                        trivy image --exit-code 0 --severity HIGH,CRITICAL --format html \\
                            -o ${WORKSPACE}/reports/backend-trivy-report.html ${ECR_BACKEND_URI}:${BACKEND_TAG} || true

                        echo "Scanning frontend image..."
                        trivy image --exit-code 0 --severity HIGH,CRITICAL --format html \\
                            -o ${WORKSPACE}/reports/frontend-trivy-report.html ${ECR_FRONTEND_URI}:${FRONTEND_TAG} || true
                    """
                }
            }
        }

        stage('Login to AWS ECR') {
            steps {
                script {
                    echo "üîê Logging in to AWS ECR..."
                    withAWS(region: "${AWS_REGION}", credentials: 'aws-credentials') {
                        sh '''
                            aws ecr get-login-password --region ${AWS_REGION} | \
                            docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                        '''
                    }
                }
            }
        }

        stage('Push Docker Images to ECR') {
            steps {
                script {
                    echo "üì§ Pushing Docker images to AWS ECR..."
                    sh """
                        docker push ${ECR_BACKEND_URI}:${BACKEND_TAG}
                        docker push ${ECR_FRONTEND_URI}:${FRONTEND_TAG}
                    """
                }
            }
        }

        // ------------------ üîÑ GitOps Stage -------------------
        stage('Update Manifests (GitOps)') {
            steps {
                script {
                    echo "üß© Updating Kubernetes manifests with new image tags for ArgoCD..."
                    withCredentials([usernamePassword(credentialsId: "${GIT_CREDENTIAL_ID}", passwordVariable: 'GIT_TOKEN', usernameVariable: 'GIT_USER')]) {
                        sh """
                            rm -rf repo
                            git clone https://${GIT_USER}:${GIT_TOKEN}@github.com/sachinashokyadav/ThreeTierApplication.git repo
                            cd repo/Kubernetes-Manifests-file

                            # Update backend image tag
                            sed -i "s|image: .*backend-img:.*|image: ${ECR_BACKEND_URI}:${BACKEND_TAG}|g" Backend/deployment.yaml

                            # Update frontend image tag
                            sed -i "s|image: .*frontend-img:.*|image: ${ECR_FRONTEND_URI}:${FRONTEND_TAG}|g" Frontend/deployment.yaml

                            git config --global user.email "jenkins@ci.local"
                            git config --global user.name "Jenkins CI"
                            git add .
                            git commit -m "GitOps: Update image tags to ${BACKEND_TAG} / ${FRONTEND_TAG} [ci skip]" || true
                            git push origin main
                        """
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline completed successfully!"
            echo "Backend Image: ${ECR_BACKEND_URI}:${BACKEND_TAG}"
            echo "Frontend Image: ${ECR_FRONTEND_URI}:${FRONTEND_TAG}"
            echo "ArgoCD will automatically sync the latest manifests from GitHub."
            cleanWs()
        }
        failure {
            echo "‚ùå Build failed! Check Jenkins logs for details."
        }
    }
}
